UTDTOOLS_ENABLE_THREADS
UTDTOOLS_ENABLE_SHARED
UTDTOOLS_ENABLE_DEBUG
UTDTOOLS_ENABLE_GRAPHICS
UTDTOOLS_ENABLE_AUTOTOOLS
UTDTOOLS_ENABLE_MEMDEBUG


AC_CHECK_PROG(MCC,imcc,imcc,"$CC")
AX_CHECK_OPENSSL


AC_CONFIG_FILES([Makefile])
AC_OUTPUT

UTDTOOLS_MESSAGES
