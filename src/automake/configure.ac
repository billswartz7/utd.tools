AC_PREREQ([2.69])
AC_INIT([utdtools], [1.00], [bill-swartz@utdallas.edu])
AM_INIT_AUTOMAKE([foreign])
AC_CONFIG_MACRO_DIRS([m4])

# Checks for programs.
AC_PROG_CC
AC_PROG_CXX
AC_PROG_LIBTOOL
AC_PATH_XTRA

UTDTOOLS_CHECK_ENVIRONMENT
UTDTOOLS_BUILD_ENV
# Here is where we set the overall version.
